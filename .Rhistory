library(here)
# function: scrape_pac ---------------------------------------------------------
scrape_pac <- function(url) {
# Load the webpage
webpage <- read_html(url)
# Extract the data from the table
webtable <- webpage %>%
html_element("table") %>%
html_table() %>%
rename(
name = `PAC Name (Affiliate)` ,
country = `Country of Origin/Parent Company`,
total = Total,
dems = Dems,
repubs = Repubs
) %>%
mutate(country = str_squish(country),
year = str_sub(url, -4))
# Return the data frame
webtable
}
